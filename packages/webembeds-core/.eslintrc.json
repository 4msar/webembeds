{
	"env": {
		"es6": true,
		"jest": true
	},
	"extends": ["airbnb-base"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
    "sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "jest"],
	"rules": {
		"quotes": ["error", "double"],
		"import/extensions": "off",
    "no-undef": "off"
	},
	"settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
